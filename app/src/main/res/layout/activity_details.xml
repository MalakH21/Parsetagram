<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <TextView
        android:id="@+id/tvUserHandle"
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ivUserPost"
        android:layout_alignEnd="@+id/ivUserPost"
        android:layout_marginBottom="-75dp"
        android:layout_marginEnd="166dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="26dp" />

    <ImageView
        android:id="@+id/ivUserPost"
        android:layout_width="378dp"
        android:layout_height="318dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        app:srcCompat="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="70dp" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_above="@+id/ivUserPost"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-75dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivUserPost"
        android:text="TextView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/tvUserHandle"
        android:layout_marginStart="-166dp"
        android:layout_toEndOf="@+id/tvUserHandle"
        android:text="TextView" />
</RelativeLayout>